<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Comerzo.Pages.InformacionComercioFormPage"
             Title="Editar Información del Comercio">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Label Text="Nombre del Comercio" FontAttributes="Bold"/>
            <Entry x:Name="txtNombreComercio" Placeholder="Ingresa el nombre del comercio"/>

            <Label Text="Razón Social" FontAttributes="Bold"/>
            <Entry x:Name="txtRazonSocial" Placeholder="Ingresa la razón social"/>

            <Label Text="Descripción" FontAttributes="Bold"/>
            <Editor x:Name="txtDescripcion" Placeholder="Ingresa una descripción" AutoSize="TextChanges" HeightRequest="100"/>

            <Label Text="ID del Encargado" FontAttributes="Bold"/>
            <Entry x:Name="txtEncargado" Placeholder="Ingresa el ID del encargado" Keyboard="Numeric"/>

            <Button Text="Guardar" Clicked="OnGuardarClicked" Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>